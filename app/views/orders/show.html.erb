<section class="orders-show">

  <header class="page-header">
    <h1>Order <%= @order.id %></h1>
  </header>

  <div  class="alert alert-success">
    <h4>Thank you for your order!</h4>
    <h5>A confimation was sent to <%= @order.email %></h5>
  </div>
  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      <% @order.line_items.each do |item| %>
        <%= render 'line_item', product: item.product, quantity: item[:quantity].to_i %>
        <% end %>
      </tbody>
    </table>
  </div>

  <h4>Your total: <%= humanized_money_with_symbol @order.total_cents/100 %></h4>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
